{
	"private": true,
	"devDependencies": {
		"@babel/core": "^7.0.0-beta.44",
		"@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.44",
		"babel-core": "^7.0.0-0",
		"babel-eslint": "^8.0.0",
		"babel-jest": "^22.4.3",
		"jest": "^22.4.3",
		"lerna": "^2.9.1",
		"regenerator-runtime": "^0.11.1",
		"standard": "^11.0.1",
		"web3": "^1.0.0-beta.33"
	},
	"workspaces": [
		"packages/*"
	],
	"jest": {
		"testEnvironment": "node",
		"projects": [
			"packages/cogito-web3",
			"packages/telepath-js",
			"packages/telepath-queuing-service"
		],
		"testMatch": [
			"**/*.test.js"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"source/**.js",
			"!**/*.test.js",
			"!**/node_modules/**"
		],
		"coverageReporters": [
			"text-summary"
		]
	},
	"scripts": {
		"test": "yarn standard && jest --verbose",
		"lint": "yarn standard",
		"lint-fix": "yarn standard --fix --verbose"
	},
	"standard": {
		"parser": "babel-eslint",
		"ignore": [
			"**/node_modules/**",
			"**/distribution/**",
			"**/umd/**",
			"**/es/**",
			"**/lib/**"
		],
		"envs": [
			"es6",
			"browser",
			"jest"
		],
		"globals": [
			"artifacts",
			"contract",
			"assert",
			"context"
		]
	}
}
