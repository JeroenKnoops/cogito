{
	"private": true,
	"devDependencies": {
		"@babel/core": "^7.0.0-beta.41",
		"@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.41",
		"babel-core": "^7.0.0-0",
		"babel-eslint": "^8.0.0",
		"babel-jest": "^22.4.1",
		"jest": "^22.4.2",
		"lerna": "^2.9.0",
		"regenerator-runtime": "^0.11.1",
		"standard": "^11.0.0",
		"web3": "^1.0.0-beta.29"
	},
	"workspaces": [
		"packages/*"
	],
	"jest": {
		"testEnvironment": "node",
		"testRegex": "packages/(cogito-web3|telepath-js)/.*test\\.js$",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"packages/cogito-web3/source/**.js",
			"packages/telepath-js/source/**.js",
			"!**/*.test.js",
			"!**/node_modules/**"
		],
		"coverageReporters": [ "text-summary" ]
	},
	"scripts": {
		"test": "yarn standard && jest --verbose",
		"lint": "yarn standard",
		"lint-fix": "yarn standard --fix --verbose"
	},
	"standard": {
		"parser": "babel-eslint",
		"ignore": [
			"**/node_modules/**",
			"**/distribution/**",
			"**/umd/**",
			"**/es/**",
			"**/lib/**"
		],
		"envs": [
			"es6",
			"browser",
			"jest"
		],
		"globals": [
			"artifacts",
			"contract",
			"assert",
			"context"
		]
	}
}
